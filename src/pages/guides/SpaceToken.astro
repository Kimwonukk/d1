---

<h2>Space Tokens</h2>

<ul class="space_tokens">
  {
    spaceToken().map((value) => {
      return (
        <li>
          <button type="button" class="token_code_content">
            <span>
              <span class="css-token">--space-{value.name}</span>
              <i class="copy">복사하기</i>
            </span>
            <span>{value.value}</span>
          </button>
        </li>
      )
    })
  }
</ul>
